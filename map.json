{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Happiness index per country",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data":{
                "url": "ne_10m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
         },
        {
            "data": {
                "url": "ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "null",
                "stroke": "lightgrey"
            }
        },
        {
            "data": {
                "url": "ne_50m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "selected_2018.csv"
                        },
                        "key": "Entity",
                        "fields": ["Score"]
                    }
                }
            ],
            "mark":{
                "type":"geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Score",
                    "type": "quantitative",
                    "title": "Happiness index",
                    "scale": {
                        "type": "threshold",
                        "domain": [0, 1, 2, 3, 4, 5, 6, 7, 8]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Score",
                        "type": "quantitative",
                        "title": "Happiness index"
                    }
    
                ]
            }
        }
    ]
}

                